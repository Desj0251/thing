<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:paddingTop="16dp"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:orientation="vertical"
	android:padding="20dp"
	tools:context="com.sriyanksiddhartha.stylesandthemesdemo.MainActivity">

	<Button
		android:id="@+id/button3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Move to Second Activity with Explode"
		android:onClick="moveToSecondActivity"/>

	<TextView
		style="@style/AppSmallText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:text="Small Text"
		android:textStyle="bold"
		android:layout_gravity="center_horizontal"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textStyle="italic"
		android:text="Medium Text"/>

	<TextView
		style="@style/AppLargeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="Large Text"/>

	<TextView
		style="@style/AppExtraLargeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="Extra Large Text"/>

	<TextView
		style="@style/AppExtraLargeLightText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="Extra Large Light"/>

	<RadioButton
		android:fontFamily="cursive"
		android:textColor="#F00"
		android:textSize="30sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="My Radio Button" />

	<TextView
		android:id="@+id/txvGradient"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Gradient"
		android:textStyle="bold"
		android:textSize="50sp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="50sp"
		android:textStyle="bold"
		android:text="Shadow"
		android:shadowColor="#5000"
		android:shadowDx="10"
		android:shadowDy="10"
		android:shadowRadius="10"/>
</LinearLayout>
